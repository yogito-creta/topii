<script>
function indir(){
  const d = document.getElementById("device").value;
  if(!d) return alert("Cihaz seç lan");
  window.location = "/files/" + d + ".zip";
}
function admin(){
  const s = prompt("Admin şifre:");
  if(s === "droid") window.location = "/admin";
  else alert("Yanlış şifre");
}
</script>

